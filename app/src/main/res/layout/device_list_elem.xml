<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:orientation="horizontal"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/device_logo"
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:layout_marginStart="12sp"
        app:srcCompat="@drawable/ic_rifle" />

    <TextView
        android:id="@+id/device-name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingStart="32dp"
        android:text="@string/devicelist_name"
        android:textSize="18sp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/device_arm_status"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:background="@drawable/disconnected"
        android:text="@string/devicelist_safe"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@android:color/black"/>
</LinearLayout>
