<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.copenhagenindustries.bluetoothconnection.fragments.WeaponControlFragment"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    >



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:stretchColumns="1"
        android:id="@+id/tablelayout1">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/weapon_control_image_header"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:srcCompat="@drawable/image_ak47"
                tools:ignore="ContentDescription" />



        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <EditText
                android:id="@+id/weapon_control_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:fontFamily="@font/aldrich"
                android:gravity="center"
                android:hint="Weapon Name"
                android:inputType="text"
                android:maxLength="25"
                android:text="Weapon Name"
                android:textColor="@android:color/black"
                android:textSize="18sp"

                />
        </TableRow>


    </TableLayout>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"

        android:stretchColumns="*"
        android:layout_below="@+id/tablelayout1"
        android:id="@+id/tableLayout">
        <!--android:background="@drawable/weapon_control_row_background"  border in tablelayout-->




        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/filler1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/row_border"

            >

            <TextView
                android:id="@+id/weapon_control_battery_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"

                android:text="Battery"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                
                />

            <ImageView
                android:id="@+id/weapon_control_battery_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_marginRight="4dp"
                android:src="@drawable/battery4" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/row_border"
            >

            <TextView
                android:id="@+id/weapon_control_oxygen_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Oxygen"
                android:textSize="18sp"
                
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/weapon_control_oxygen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="right"
                android:text="Oxygen Level"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/weapon_control_propane_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Propane"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                
                />

            <TextView
                android:id="@+id/weapon_control_propane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Propane Level"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:gravity="right"
                
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/filler2"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/filler3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/row_border"
            >

            <TextView
                android:id="@+id/weapon_control_mode_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mode"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                />

            <ImageButton
                android:id="@+id/weapon_control_mode_imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@drawable/weapon_control_bullet_fullauto" />

        </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/weapon_control_RoF_text"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:text="Rate of Fire"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                />

            <EditText
                android:id="@+id/weapon_control_RoF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:enabled="false"
                android:gravity="end"
                android:inputType="number"
                android:maxLength="10"
                android:text="1000"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/weapon_control_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Safe"
        android:background="@drawable/safe"

        />

    <Button
        android:id="@+id/weapon_control_doneEditing_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:text="Start Editing"
        android:textAllCaps="false" />


</RelativeLayout>
